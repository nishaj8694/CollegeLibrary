    <%- include('./part1.ejs') %> 
    <style>
        #floatingImage{
            content: 'nothing';
            color: rgb(255, 255, 255);
            text-transform: uppercase;

        }
        #selected-file{
            position: absolute;
            top: 35%;
            left: 40%;
        }
    </style>
    <script>
        
        document.addEventListener('DOMContentLoaded', function() {
            const fileInput = document.getElementById('floatingImage');
            const selectedFileSpan = document.getElementById('selected-file');
            fileInput.addEventListener('change', (event) => {
                const fileName = event.target.value.split('\\').pop() || event.target.value.split('/').pop();
                selectedFileSpan.textContent = fileName ? `${fileName}` : '';
           });
        });
        
    </script>
    
    <div class="d-flex justify-content-center align-items-center w-100 h-100vh">
        <div class="row w-100 d-flex justify-content-center align-items-center">
            <div class="col-lg-5 col-md-8  col-sm-10  col-xs-11 border rounded-1 p-5 m-5 bg-body-tertiary">
                <% if (data.Book){ %>
                    <form action="/dashboard/book/<%= data._id %>" method="post" enctype="multipart/form-data">
                    <% } else{ %>
                    <form action="book" method="post" enctype="multipart/form-data">

                    <% } %>
                    <h1 class="h3 mb-3 fw-normal text-center">Create Book</h1>

                    <div class="form-floating">
                      <input type="text" class="form-control" id="floatingInput" 
                      placeholder="Name of the book" name="Book"
                      value="<%= data.Book ? data.Book : '' %>">
                      <label for="floatingInput">Book Name</label>
                    </div>
                    <div class="form-floating mt-2">
                      <input type="Auther" class="form-control" id="floatingPassword" 
                      placeholder="Auther name" name="Auther"
                      value="<%= data.Book ? data.Auther : '' %>">
                      <label for="floatingPassword">Auther</label>
                    </div>
                    <div class="form-floating mt-2">
                        <input type="number" class="form-control" id="floatingNumber" 
                        placeholder="Number of pages" name="Page"
                        value="<%= data.Book ? data.Page : '' %>">
                        <label for="floatingNumber">Pages</label>
                    </div>
                    <div class="form-floating mt-2">
                        <select class="form-control" id="floatingNumber" name="Department">
                            <option value="<%= data.Department ? data.Department : '' %>">
                                <%= data.Department ? data.Department : '' %>
                            </option>
                            <option value="general">general</option>
                            <option value="commerce">commerce</option>
                            <option value="science">science</option>
                        </select>    
                        <label for="floatingNumber">Department</label>
                    </div>

                    <div class="form-floating mt-2">
                        <!-- <label for="floatingImage">Select Image File</label> -->
                        <input type="file" class="form-control pb-5 px-3" id="floatingImage" name="Image">
                        <span id="selected-file"> <%= data.Image ? data.Image : 'no file choosen' %></span>
                    </div>
                    
                    <div class="mt-2 text-center">
                        <button class="btn btn-primary w-50 py-2" type="submit">Submit</button>
                    </div>
                  </form>
            </div>
        </div>
        
    </div>
    <%- include('./part2.ejs') %>     